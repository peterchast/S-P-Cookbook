---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "Tagged “{{ tag }}”"
  metaDescription: "All posts from the Blog tagged with “{{ tag }}”"
---

<div class="[ wide-wrapper ] [ flow ]">
  <section class="filter-page">
    <h1>Recipes filed under <span class="safetyorange">#{{ tag }}</span>:</h1>
    {{ layoutContent | safe }}
  </section>
  <section class="recipe-browse">
    {% set postslist = collections[tag] %}
    {% include "components/recipe-cards.njk" %}
  </section>
</div>
