---
layout: layouts/base.njk
section: post
---

<div class="[ wrapper ] [ flow ]">
  <article>
    <section class="recipe-intro">
    <p>
    {% set categoryUrl %}/categories/{{ category }}/{% endset %}
    <a class="category" href="{{ categoryUrl | url }}" rel="category">{{ category }}</a>
    <p>
      <h1 class="recipe-name"> {{ title }}</h1>
      <p class="tagline"> {{ tagline }} </p>
        {% if tags %}
          <ul class="tag-list" role="list">
          {% for tag in tags %}
            {%- if tag != "post" -%}
              <li>
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a class="tag smaller-text" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
              </li>
            {%- endif -%}
          {% endfor %}
          </ul>
        {% endif %}
    </section>

    <section class="featured-img">
      <img src="{{ featured_image}}">
    </section>

  <section class="recipe-about flow">
    <div class="reasons-why">
      <h2>WHY WE LOVE IT</h2>
      <ul>
        {% for reason in love_list %}
          <li>
            {{ reason.love_reason }}
          </li>
        {% endfor %}
      </ul>
    </div>

{% if story.length %}
    <div class="recipe-commentary flow">
      {{ story  | markdownify | safe  }}
    </div>
          {% endif %}

    <div class="recipe-facts">
      <div class="stats info-box">
        <div class="stats-time">
          <span class="label">
            <p class="smaller-text">Active:</p>
          </span>
          <span class="data">
            <h3>{{ active_time }}</h3>
          </span>
        </div>
      </div>
      <div class="stats info-box">
        <div class="stats-time">
          <span class="label">
            <p class="smaller-text">Total:</p>
            </span>
    <span class="data">
      <h3>{{ total_time }}</h3>
    </span>
  </div>
  </div>
  <div class="stats info-box">
    <div class="stats-yield">
    <span class="label">
      <p class="smaller-text">Yield:</p>
    </span>
    <span class="data">
      <h3>{{ yield }}</h3>
    </span>
    </div>
  </div>
</div>

</section>

<section class="recipe-ingredients flow">

<h2 class="section-headline">Ingredients</h2>

{% for groups in ingredients_list %}
  <p><strong> {% if groups.group_name != "Ingredient List" %} {{ groups.group_name }} {% endif %}</strong></p>
<ul>
  {% for items in groups.ingredient %}
  <li>
    {{ items.amount }} {{ items.unit }} {{ items.ingredient }}
  </li>
  {% endfor %}
</ul>
{% endfor %}

{% if special_equipment %}
<p><strong>Special equipment you'll need üî™üç≥:</strong></p>
<ul>
  {% for items in special_equipment %}
  <li>
    {{ items.equipment }}
  </li>
  {% endfor %}
</ul>
{% endif %}

</section>

<section class="recipe-instructions flow">

<h2 class="section-headline">Instructions</h2>

<ol role="list" class="instructions-list flow">
  {% for steps in instructions %}
    <li>
      <div class="single-instruction flow">
      <h3 class="step-title"> {{ steps.title }}</h3>

      {% if steps.ingredients_used.amount.length %}
      <ul class="step-needed">
        {% for items in steps.ingredients_used %}
          <li>
            {{ items.amount }} {{ items.unit }} {{ items.ingredient }}
          </li>
        {% endfor %}
          </ul>
        {% endif %}

      <p class="step-text">{{ steps.description }}</p>

      {% if steps.instruction_photo %}
      <div class="step-photos">
          <img src="{{ steps.instruction_photo }}">
        </div>
      {% endif %}

 {% if steps.instruction_tip.title.length %}
 <div class="step-tips">
        <label for="toggle" class="show-tip"><div class="tip-activate">
          <p class="smaller-text">Just The Tip</p>
          <svg class="tip-arrow" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
  <circle cx="8" cy="8" r="8" fill="inherit"></circle>
  <path d="M10.666 11.4075L4.74009 11.4075L4.74009 5.48157" stroke="#1B4D7A"></path>
  <path d="M4.73958 11.4076L11.4062 4.74097" stroke="#1B4D7A"></path>
              </svg>
            </div>
          </label>
          <input type="checkbox" id="toggle">
          <div class="tip-inner flow">
   {% for items in steps.instruction_tip %}</h4>
       <h4 class="step-title">{{ items.title }}</h4>
       <p>{{ items.description}}</p>
       <img src="{{ items.tip_photo }}">
   {% endfor %}
   {% endif %}
</div>

    </li>
  {% endfor %}
</ol>

</section>

<section class="recipe-footer flow">
  {% if other_notes.length %}
  <div class="recipe-notes flow info-box">
    <h3 class="step-title">Other Notes</h3>
      <ul>
        {% for items in other_notes %}
        <li>
          {{ items.note }}
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    <div class="flow inspired-by">
    {% if inspired_by %}
      <p class="font-mono upper strong deepsea">This recipe was inspired by:&nbsp;</p>
      {{ inspired_by | markdownify | safe }}
{% endif %}
</div>
</section>

</article>
</div>
